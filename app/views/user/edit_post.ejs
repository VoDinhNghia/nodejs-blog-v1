<!DOCTYPE html>
<html lang="en">

<head>
    <title>home</title>
    <%- include("./header") %>
</head>

<body>

    <%- include("./menu") %>
        <div class="container" style="margin-top:70px">
            <div class="row">
                <%- include("./content_left_personel") %>
                    <div class="col-sm-8">
                        <form action="/edit_post" method="POST" id="form_new_post" enctype="multipart/form-data">
                            <h5>Privacy</h5>
                            <select id="privacy" class="custom-select" name="privacy">
                                <option selected>
                                <% if(data_post[0].privacy == 0) {%>
                                     publish
                                     <% } else{ %>
                                    private
                                    <% } %>                    
                                </option>
                                <option value="publish">publish</option>
                                <option value="private">private</option>
                            </select>
                            <br><br>
                            <h5>Post Title</h5>
                            <input type="text" name="title_post" class="form-control" value="<%= data_post[0].title%>" placeholder="" aria-label="" aria-describedby="basic-addon1"><br>
                            <h5>Content</h5>
                            <textarea class="form-control" name="content_post" id="exampleFormControlTextarea1" rows="5"><%= data_post[0].content%></textarea>
                            <br>
                            <h5>File images</h5>
                            <input type="file" name="image_file" class="form-control-file" id="exampleFormControlFile1">
                            <input type="text" name="id_post" value="<%= data_post[0].ID%>" style="display: none;">
                            <br>
                            <button type="submit" class="btn btn-primary">Edit post</button>
                            <a href="/delete_post/<%= data_post[0].ID%>" style="color: white;"><button type="button" class="btn btn-danger float-right">Delete</button></a>
                        </form>
                    </div>
            </div>
        </div>
        <%- include("./footer") %>
</body>

</html>