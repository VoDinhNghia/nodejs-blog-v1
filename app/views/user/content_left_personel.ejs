<div class="col-sm-4 text-center">
    <% if(data[0].image != '') {%>
        <div class="fakeimg_avata"><img src="<%= data[0].avatar %>" alt="image" width="230px" height="240px"></div>
        <% }%>
            <br>
            <ul class="nav nav-pills flex-column text-center text-info">
                <li class="nav-item"><br>
                    <p>Name:
                        <%= data[0].name %>
                    </p>
                </li>
                <li class="nav-item">
                    <p>Email:
                        <%= data[0].email %>
                    </p>
                </li>
                <li class="nav-item">
                    <p>Mobile: 0
                        <%= data[0].mobile %>
                    </p>
                </li>
                <li class="nav-item">
                    <p>Country:
                        <%= data[0].country %>
                    </p>
                </li>
            </ul>
            <hr class="d-sm-none">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#updateinfo">
  Update info
</button> <br>

            <!-- Modal -->
            <div class="modal" id="updateinfo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <form action="/update_info_personel" method="POST" enctype="multipart/form-data">
                            <div class="modal-header">
                                <h5 class="modal-title text-info" id="exampleModalLabel">Update information</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                       <span aria-hidden="true">&times;</span>
                                    </button>
                            </div>
                            <div class="modal-body">
                                <h5 class="modal-title text-left text-danger">Name</h5>
                                <input type="text" name="name" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1"><br>
                                <h5 class="modal-title text-left text-danger">Email</h5>
                                <input type="email" name="email" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1"><br>
                                <h5 class="modal-title text-left text-danger">Password</h5>
                                <input type="password" name="pass" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1"><br>
                                <h5 class="modal-title text-left text-danger">Mobile</h5>
                                <input type="tel" name="mobile" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1"><br>
                                <h5 class="modal-title text-left text-danger">Country</h5>
                                <input type="text" name="country" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1"><br>

                                <h5 class="modal-title text-left text-danger">File avatar</h5><br>
                                <input type="file" name="image_file_avatar" class="form-control-file" id="exampleFormControlFile1">
                                <br>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <br>
            <hr>
</div>