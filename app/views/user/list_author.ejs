<!DOCTYPE html>
<html lang="en">

<head>
    <title>home</title>
    <%- include("./header") %>
</head>

<body>

    <%- include("./menu") %>
        <div class="container" style="margin-top:70px">
            <div class="row">
                <%- include("./content_left") %>
                    <div class="col-sm-8">
                        <h5 class="text-danger text-center">List author</h5><br>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Mobile</th>
                                    <th>Country</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(data_user.length){ 
                                    for(var i = 0;i < data_user.length;i++) { %>
                                    <tr>
                                        <td class="text-danger">
                                            <%=i+1 %>.</td>
                                        <td class="text-info">
                                            <a href="/info_personel/<%= data_user[i].ID %>">
                                                <%= data_user[i].name%>
                                            </a>
                                        </td>
                                        <td class="text-info">
                                            <a href="https://mail.google.com/">
                                                <%= data_user[i].email%>
                                            </a>
                                        </td>

                                        <td>
                                            <%= data_user[i].mobile%>
                                        </td>
                                        <td>
                                            <%= data_user[i].country%>
                                        </td>
                                    </tr>
                                    <% }
                                                                        }else{ %>
                                        <tr>
                                            <td colspan="3">Not found.</td>
                                        </tr>
                                        <% } %>
                            </tbody>
                        </table>
                    </div>
            </div>
        </div>
        <%- include("./footer") %>
</body>

</html>