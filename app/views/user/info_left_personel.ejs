<div class="col-sm-4 text-center">
    <% if(data_user[0].avatar!= '') {%>
        <div class="fakeimg_avata">
            <img src="<%= data_user[0].avatar %>" alt="image" width="230px" height="225px">
        </div>
        <% }%>
            <br>
            <ul class="nav nav-pills flex-column text-center text-info">
                <li class="nav-item"><br>
                    <p>Name:
                        <%= data_user[0].name %>
                    </p>
                </li>
                <li class="nav-item">
                    <p>Email:
                        <%= data_user[0].email %>
                    </p>
                </li>
                <li class="nav-item">
                    <p>Mobile: 0
                        <%= data_user[0].mobile %>
                    </p>
                </li>
                <li class="nav-item">
                    <p>Country:
                        <%= data_user[0].country %>
                    </p>
                </li>
            </ul>
            <hr class="d-sm-none">

            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#viewimage">
             view image
            </button>
            <!-- Modal -->
            <div class="modal" id="viewimage" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-lg modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title text-info" id="exampleModalLabel">View image</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                       <span aria-hidden="true">&times;</span>
                                    </button>
                        </div>
                        <div class="modal-body">
                            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                                <div class="carousel-inner">
                                    <% if(data.length) { %>
                                        <% if(data[0].image != ''){ %>
                                            <div class="carousel-item active">
                                                <img class="d-block w-100" src="<%= data[0].image %>" alt="image" height="400px">
                                            </div>
                                            <% } %>

                                                <% for(let k = data.length - 1; k > 0; k--){ %>
                                                    <% if(data[k].image != ''){ %>
                                                        <div class="carousel-item">
                                                            <img class="d-block w-100" src="<%= data[k].image %>" alt="image" height="400px">
                                                        </div>
                                                        <%} } } else {%>
                                                            <p>not found</p>
                                                            <% } %>
                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>

            <br>
            <hr>
</div>